    @model OrderDTO
@inject SignInManager<AppUser> SignInManager

@{
    var methodStoreSelected = Model.DeliveryDetails.DeliveryMethodType.Equals(DeliveryMethodType.Store) ? "block" : "none";
    var methodCourierSelected = Model.DeliveryDetails.DeliveryMethodType.Equals(DeliveryMethodType.Courier) ? "block" : "none";
    var methodLockerSelected = Model.DeliveryDetails.DeliveryMethodType.Equals(DeliveryMethodType.Locker) ? "block" : "none";
}

@if (Model.NoUserAccount)
{
    <div class="form-group delivery-method-group" data-delivery-method="all" style="display:block;">
        <label asp-for="@Model.DeliveryDetails.Email"></label>
        <input asp-for="@Model.DeliveryDetails.Email" class="form-control" />
    </div>
}

<div class="form-group delivery-method-group" data-delivery-method="all" style="display:block;">
    <label asp-for="@Model.DeliveryDetails.Firstname"></label>
    <input asp-for="@Model.DeliveryDetails.Firstname" class="form-control" />
</div>

<div class="form-group delivery-method-group" data-delivery-method="all" style="display:block;">
    <label asp-for="@Model.DeliveryDetails.Lastname"></label>
    <input asp-for="@Model.DeliveryDetails.Lastname" class="form-control" />
</div>

<div class="form-group delivery-method-group" data-delivery-method="all" style="display:block;">
    <label asp-for="@Model.DeliveryDetails.PhoneNumber"></label>
    <input asp-for="@Model.DeliveryDetails.PhoneNumber" class="form-control" />
</div>

<div class="form-group delivery-method-group" data-delivery-method="store" style="display:@methodStoreSelected;">
    <label asp-for="@Model.DeliveryDetails.StoreCode"></label>
    <input asp-for="@Model.DeliveryDetails.StoreCode" class="form-control" />
</div>

<div class="form-group delivery-method-group" data-delivery-method="locker" style="display:@methodLockerSelected;">
    <label asp-for="@Model.DeliveryDetails.ParcelLockerCode"></label>
    <input asp-for="@Model.DeliveryDetails.ParcelLockerCode" class="form-control" />
</div>

<div class="form-group delivery-method-group" data-delivery-method="courier" style="display:@methodCourierSelected;">
    <label asp-for="@Model.DeliveryDetails.Street"></label>
    <input asp-for="@Model.DeliveryDetails.Street" class="form-control" />
</div>

<div class="form-group delivery-method-group" data-delivery-method="courier" style="display:@methodCourierSelected;">
    <label asp-for="@Model.DeliveryDetails.Building"></label>
    <input asp-for="@Model.DeliveryDetails.Building" class="form-control" />
</div>

<div class="form-group delivery-method-group" data-delivery-method="courier" style="display:@methodCourierSelected;">
    <label asp-for="@Model.DeliveryDetails.Appartment"></label>
    <input asp-for="@Model.DeliveryDetails.Appartment" class="form-control" />
</div>

<div class="form-group delivery-method-group" data-delivery-method="courier" style="display:@methodCourierSelected;">
    <label asp-for="@Model.DeliveryDetails.PostalCode"></label>
    <input asp-for="@Model.DeliveryDetails.PostalCode" class="form-control" />
</div>

<div class="form-group delivery-method-group" data-delivery-method="courier" style="display:@methodCourierSelected;">
    <label asp-for="@Model.DeliveryDetails.City"></label>
    <input asp-for="@Model.DeliveryDetails.City" class="form-control" />
</div>

<div class="form-group delivery-method-group" data-delivery-method="courier" style="display:@methodCourierSelected;">
    <label asp-for="@Model.DeliveryDetails.Country"></label>
    <input asp-for="@Model.DeliveryDetails.Country" class="form-control" />
</div>

