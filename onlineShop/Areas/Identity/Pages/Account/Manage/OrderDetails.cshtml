@page
@model OrderDetailsModel
@{
    ViewData["Title"] = "Order Details";
}

<div class="mb-3">
    <h5>Order Info</h5>
    @Html.DisplayFor(x=>x.OrderDTO, "~/Views/Order/DisplayTemplates/OrderInfo.cshtml")
</div>

<div class="mb-3">
    <h5>Items</h5>
    @Html.DisplayFor(x => x.OrderDTO, "~/Views/Order/DisplayTemplates/OrderItems.cshtml")
